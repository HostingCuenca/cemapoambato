---
const services = [
    {
        icon: "user-group",
        title: "Reclutamiento y Selección",
        description: "Identificamos y atraemos al mejor talento para cada posición, asegurando un ajuste perfecto con la cultura de tu organización."
    },
    {
        icon: "academic-cap",
        title: "Capacitación Empresarial",
        description: "Desarrollamos programas de formación personalizados para potenciar las habilidades y competencias de tu equipo."
    },
    {
        icon: "chart-bar",
        title: "Evaluación de Desempeño",
        description: "Implementamos sistemas efectivos para medir y mejorar el rendimiento de tus colaboradores."
    },
    {
        icon: "users",
        title: "Clima Organizacional",
        description: "Diagnosticamos y mejoramos el ambiente laboral para aumentar la satisfacción y productividad."
    },
    {
        icon: "light-bulb",
        title: "Desarrollo de Liderazgo",
        description: "Formamos líderes capaces de inspirar y guiar equipos hacia los objetivos estratégicos."
    },
    {
        icon: "document-text",
        title: "Gestión por Competencias",
        description: "Diseñamos sistemas basados en competencias para optimizar la gestión del talento humano."
    }
];
---

<section class="bg-white py-20">
    <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">Nuestros Servicios</h2>
            <p class="text-gray-600">
                Soluciones integrales diseñadas para potenciar el talento humano y asegurar el éxito organizacional en un mercado competitivo.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map(service => (
                    <div class="bg-gray-50 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow border border-gray-100">
                        <div class="bg-primary-100 w-14 h-14 rounded-md flex items-center justify-center mb-5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                {service.icon === "user-group" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                )}
                                {service.icon === "academic-cap" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z M12 14l-9-5 9-5 9 5-9 5z"></path>
                                )}
                                {service.icon === "chart-bar" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                )}
                                {service.icon === "users" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                )}
                                {service.icon === "light-bulb" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                )}
                                {service.icon === "document-text" && (
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                )}
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-3">{service.title}</h3>
                        <p class="text-gray-600 mb-4">{service.description}</p>
                        <a href="/servicios" class="text-primary-600 hover:text-primary-700 inline-flex items-center transition-colors font-medium">
                            Saber más
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </div>
            ))}
        </div>

        <div class="mt-12 text-center">
            <a href="/servicios" class="inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white py-3 px-6 rounded-md transition-colors">
                Ver todos los servicios
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </div>
</section>