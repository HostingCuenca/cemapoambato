<style>
    /* Estilos para el carrusel con efecto zoom */
    .slideshow-container {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .slide {
        width: 100%;
        height: 100%;
        position: absolute;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        animation: zoom 12s infinite;
        animation-play-state: paused;
    }

    .slide.active {
        opacity: 1;
        animation-play-state: running;
    }

    .fade {
        animation-name: fade;
        animation-duration: 1.5s;
    }

    @keyframes zoom {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    @keyframes fade {
        from { opacity: 0.4 }
        to { opacity: 1 }
    }

    /* Animaciones de fade-in para el contenido */
    .fade-in {
        animation: fadeIn 1.2s ease-out forwards;
    }

    .delay-200 {
        animation-delay: 200ms;
    }

    .delay-400 {
        animation-delay: 400ms;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Sección flotante de estadísticas */
    .stats-container {
        position: relative;
        margin-top: -100px;
        z-index: 30;
        margin-bottom: 3rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 1.5rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    @media (min-width: 640px) {
        .stats-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        padding: 2rem 1.5rem;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: #0036c3; /* Azul eléctrico oscuro */
        margin-bottom: 0.5rem;
        line-height: 1;
    }

    .stat-label {
        color: #333;
        font-size: 1rem;
        font-weight: 500;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Cargar la biblioteca de partículas tecnológicas
        const script = document.createElement('script');
        script.src = 'https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js';
        script.onload = loadVanta;
        document.head.appendChild(script);

        // Inicializar las animaciones de fade
        const fadeElements = document.querySelectorAll('.fade-in');
        fadeElements.forEach(el => {
            el.classList.add('animate');
        });

        // Configurar el carrusel de imágenes con cambio cada 6 segundos
        const slides = document.querySelectorAll('.slide');
        let currentSlide = 0;

        function showSlide(n) {
            slides.forEach(slide => {
                slide.classList.remove('active');
            });

            currentSlide = (n + slides.length) % slides.length;
            slides[currentSlide].classList.add('active');
        }

        function nextSlide() {
            showSlide(currentSlide + 1);
        }

        // Iniciar el carrusel
        setInterval(nextSlide, 6000);
    });

    // Cargar efectos de partículas tecnológicas VANTA.js
    function loadVanta() {
        const vantaScript = document.createElement('script');
        vantaScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/vanta/0.5.24/vanta.net.min.js';
        vantaScript.onload = initVantaEffect;
        document.head.appendChild(vantaScript);
    }

    // Inicializar efecto de partículas tecnológicas
    function initVantaEffect() {
        if (window.VANTA) {
            window.VANTA.NET({
                el: "#tech-particles",
                mouseControls: false,
                touchControls: false,
                gyroControls: false,
                minHeight: 200.00,
                minWidth: 200.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x3a56ff,
                backgroundColor: 0x0,
                points: 8.00,
                maxDistance: 20.00,
                spacing: 16.00,
                backgroundAlpha: 0.00
            });
        }
    }
</script>