      </div>
  
      <!-- CTA central con diseño mejorado -->
      <div class="text-center mt-16">
        <div class="inline-block relative">
          <a href="/servicios" class="inline-flex items-center px-8 py-4 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            Ver todos nuestros servicios
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <!-- Elemento decorativo -->
          <div class="absolute -z-10 -bottom-3 -right-3 w-full h-full bg-secondary-400 rounded-lg opacity-50 transform rotate-3"></div>
        </div>
      </div>
