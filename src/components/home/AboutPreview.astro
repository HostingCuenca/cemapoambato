<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Imagen y decoración -->
            <div class="relative">
                <div class="bg-white p-3 rounded-lg shadow-xl">
                    <img
                            src="/assets/images/about-team.webp"
                            alt="Equipo de CEMAPO"
                            class="rounded-lg w-full h-auto"
                    />
                </div>

                <!-- Elementos decorativos -->
                <div class="absolute -top-6 -left-6 w-24 h-24 bg-primary-200 rounded-xl hidden md:block"></div>
                <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-secondary-100 rounded-xl hidden md:block"></div>

                <!-- Tarjeta superpuesta -->
                <div class="absolute bottom-8 -right-4 md:right-8 bg-white p-4 rounded-lg shadow-lg max-w-xs hidden md:block">
                    <div class="flex items-center">
                        <div class="bg-primary-100 p-3 rounded-full mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-800">Soluciones a medida</h4>
                            <p class="text-sm text-gray-600">Adaptadas a las necesidades específicas de tu empresa</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contenido -->
          
        </div>
    </div>
</section>
