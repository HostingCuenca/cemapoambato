<style>
  /* Animaciones para las tarjetas de cursos */
  .course-card {
    backface-visibility: hidden;
    will-change: transform, box-shadow;
  }
  
  /* Transición suave para el botón de WhatsApp */
  .course-card a {
    transition: all 0.3s ease;
  }
  
  /* Efecto de elevación en las tarjetas */
  .course-card:hover {
    transform: translateY(-5px);
  }
  
  /* Marca el primer curso como destacado */
  .course-card:first-child {
    position: relative;
  }
  
  .course-card:first-child::before {
    content: "Destacado";
    position: absolute;
    top: 10px;
    left: 10px;
    background: linear-gradient(135deg, #ff9d00, #ff0058);
    color: white;
    font-size: 12px;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 12px;
    z-index: 10;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Funcionalidad para mostrar/ocultar más cursos
    const toggleButton = document.getElementById('toggle-courses');
    const hiddenCourses = document.getElementById('hidden-courses');
    const toggleText = document.getElementById('toggle-text');
    const toggleIconDown = document.getElementById('toggle-icon-down');
    const toggleIconUp = document.getElementById('toggle-icon-up');
    
    let coursesVisible = false;
    
    toggleButton.addEventListener('click', function() {
      // Cambiar visibilidad de cursos
      if (!coursesVisible) {
        hiddenCourses.classList.remove('hidden');
        
        // Animar los cursos que aparecen
        const newCourseCards = hiddenCourses.querySelectorAll('.course-card');
        newCourseCards.forEach((card, index) => {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          
          setTimeout(() => {
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 100 * index); // Efecto escalonado
        });
        
        // Cambiar texto e icono
        toggleText.textContent = 'Ver menos cursos';
        toggleIconDown.classList.add('hidden');
        toggleIconUp.classList.remove('hidden');
        
        // Scroll suave hacia los nuevos cursos
        setTimeout(() => {
          hiddenCourses.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 100);
      } else {
        // Animación de desvanecimiento
        const newCourseCards = hiddenCourses.querySelectorAll('.course-card');
        newCourseCards.forEach((card, index) => {
          setTimeout(() => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
          }, 50 * index);
        });
        
        // Ocultar después de la animación
        setTimeout(() => {
          hiddenCourses.classList.add('hidden');
          
          // Restablecer estilos para próxima aparición
          newCourseCards.forEach(card => {
            card.style.transition = '';
            card.style.opacity = '';
            card.style.transform = '';
          });
        }, 500);
        
        // Cambiar texto e icono
        toggleText.textContent = 'Ver más cursos';
        toggleIconDown.classList.remove('hidden');
        toggleIconUp.classList.add('hidden');
      }
      
      coursesVisible = !coursesVisible;
    });
  });
</script>