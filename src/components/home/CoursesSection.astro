<style>
  /* Efecto de elevación en las tarjetas */
  .course-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .course-card:hover {
    transform: translateY(-5px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Funcionalidad para mostrar/ocultar más cursos
    const toggleButton = document.getElementById('toggle-courses');
    const hiddenCourses = document.getElementById('hidden-courses');
    const toggleText = document.getElementById('toggle-text');
    const toggleIconDown = document.getElementById('toggle-icon-down');
    const toggleIconUp = document.getElementById('toggle-icon-up');
    
    let coursesVisible = false;
    
    toggleButton.addEventListener('click', function() {
      if (!coursesVisible) {
        // Mostrar cursos adicionales
        hiddenCourses.classList.remove('hidden');
        
        // Cambiar texto e icono
        toggleText.textContent = 'Ver menos cursos';
        toggleIconDown.classList.add('hidden');
        toggleIconUp.classList.remove('hidden');
        
        // Scroll suave hacia los nuevos cursos
        setTimeout(() => {
          hiddenCourses.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }, 100);
      } else {
        // Ocultar cursos adicionales
        hiddenCourses.classList.add('hidden');
        
        // Cambiar texto e icono
        toggleText.textContent = 'Ver más cursos';
        toggleIconDown.classList.remove('hidden');
        toggleIconUp.classList.add('hidden');
      }
      
      coursesVisible = !coursesVisible;
    });
  });
</script>