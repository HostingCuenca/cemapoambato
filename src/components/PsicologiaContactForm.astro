                        </svg>
                        Contactar por WhatsApp
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script is:inline>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM cargado completamente - Inicializando formulario');

        // Obtener referencias a los elementos del formulario
        const contactForm = document.getElementById('contacto-form');
        const nombreInput = document.getElementById('nombre');
        const emailInput = document.getElementById('email');
        const telefonoInput = document.getElementById('telefono');
        const servicioSelect = document.getElementById('servicio');
        const mensajeInput = document.getElementById('mensaje');
        const submitButton = document.getElementById('submit-button');
        const formStatus = document.getElementById('form-status');

        // Asegurarnos de que todos los elementos existen
        if (!contactForm || !nombreInput || !emailInput || !telefonoInput || !servicioSelect || !submitButton || !formStatus) {
            console.error('No se pudieron encontrar todos los elementos del formulario');
            return;
        }

        console.log('Elementos del formulario encontrados correctamente');

        // Función para actualizar el estado del formulario
        function updateFormStatus(message, isSuccess) {
            formStatus.textContent = message;
            formStatus.style.display = 'block';

            // Resetear clases
            formStatus.className = 'mt-4 p-3 rounded-lg text-center';

            if (isSuccess === true) {
                formStatus.classList.add('bg-green-100');
                formStatus.classList.add('text-green-800');
            } else if (isSuccess === false) {
                formStatus.classList.add('bg-red-100');
                formStatus.classList.add('text-red-800');
            }
        }

        // Manejar el envío del formulario
        contactForm.addEventListener('submit', function(e) {
            console.log('Evento submit capturado');

            // Detener INMEDIATAMENTE el comportamiento predeterminado
            e.preventDefault();
            e.stopPropagation();

            // Validar formulario
            if (!nombreInput.value || !emailInput.value || !telefonoInput.value || !servicioSelect.value) {
                updateFormStatus('Por favor complete todos los campos requeridos', false);
                return false;
            }

            console.log('Validación del formulario exitosa - Preparando para enviar');

            // Deshabilitar botón mientras se procesa
            submitButton.disabled = true;
            const originalButtonText = submitButton.innerHTML;
            submitButton.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

            // Preparar datos
            const formData = {
                nombre: nombreInput.value,
                email: emailInput.value,
                telefono: telefonoInput.value,
                servicio: servicioSelect.value,
                mensaje: mensajeInput ? mensajeInput.value : ''
            };

            console.log('Datos del formulario preparados', formData);

            // Usar fetch con promesas
            fetch('http://cemapoedu.ec.softlatam.com/api/submit-psicologia', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(response => {
                    console.log('Respuesta recibida', response);
                    if (!response.ok) {
                        throw new Error('Error en la respuesta del servidor');
                    }
                    return response.json();
                })
                .then(result => {
                    console.log('Datos procesados correctamente', result);
                    // Mostrar mensaje de éxito
                    updateFormStatus('¡Gracias! Recibimos tu solicitud y nos pondremos en contacto contigo muy pronto.', true);
                    // Limpiar formulario
                    contactForm.reset();
                })
                .catch(error => {
                    console.error('Error al enviar solicitud:', error);
                    updateFormStatus(`Error: No se pudo enviar la solicitud. Intenta de nuevo más tarde.`, false);
                })
                .finally(() => {
                    // Restaurar botón
                    submitButton.disabled = false;
                    submitButton.innerHTML = originalButtonText;
                });

// Retornar false para asegurarnos de que no se procese el submit del formulario
            return false;
        });

// Opcional: Validaciones en tiempo real
        nombreInput.addEventListener('blur', function() {
            if (!this.value) {
                this.classList.add('border-red-500');
            } else {
                this.classList.remove('border-red-500');
            }
        });

        emailInput.addEventListener('blur', function() {
            if (!this.value) {
                this.classList.add('border-red-500');
            } else {
                this.classList.remove('border-red-500');
            }
        });

        telefonoInput.addEventListener('blur', function() {
            if (!this.value) {
                this.classList.add('border-red-500');
            } else {
                this.classList.remove('border-red-500');
            }
        });

        servicioSelect.addEventListener('change', function() {
            if (!this.value) {
                this.classList.add('border-red-500');
            } else {
                this.classList.remove('border-red-500');
            }
        });
    });
</script>