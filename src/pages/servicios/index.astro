            <!-- Grid de servicios principales -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
                <!-- Servicio 1: Gestión Humana -->
                <a href="/gestion-humana" class="bg-white p-6 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-2 border-t-4 border-blue-600 flex flex-col h-full group">
