---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/services/ServiceCard.astro';
---

<Layout title="Nuestros Servicios | CEMAPO - Especialistas en Talento Humano">
    <!-- Encabezado de la página - Estilo Hero como en psicología -->
    <section class="relative min-h-[90vh] flex items-center py-24 md:py-32 overflow-hidden">
        <!-- Imagen de fondo con overlay -->
        <div class="absolute inset-0 z-0">
            <img
                src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                alt="Servicios de talento humano"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-indigo-800/80"></div>
        </div>

        <!-- Patrón de fondo para añadir textura -->
        <div class="absolute inset-0 opacity-5 z-10">
            <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <pattern id="small-grid" width="20" height="20" patternUnits="userSpaceOnUse">
                        <path d="M 20 0 L 0 0 0 20" fill="none" stroke="white" stroke-width="0.5"/>
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#small-grid)" />
            </svg>
        </div>

        <!-- Contenido del Hero -->
        <div class="container mx-auto px-6 relative z-20">
            <div class="flex flex-col lg:flex-row items-center">
                <div class="w-full lg:w-1/2 text-white mb-12 lg:mb-0">
                <span class="inline-block py-1 px-3 rounded-full bg-blue-600/80 text-white text-sm font-semibold mb-6 backdrop-blur-sm">
                    SOLUCIONES INTEGRALES
                </span>
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold mb-6 leading-tight">
                        Servicios de <span class="text-blue-300">Talento Humano</span>
                    </h1>
                    <p class="text-xl max-w-xl text-white/90 mb-10 leading-relaxed">
                        Soluciones integrales diseñadas para potenciar el talento humano y maximizar el rendimiento de tu organización.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 mt-10">
                        <a href="#servicios" class="bg-white hover:bg-gray-100 text-blue-900 px-8 py-4 rounded-lg font-semibold transition-all duration-300 shadow-lg transform hover:-translate-y-1 text-center">
                            Nuestros Servicios
                        </a>
                        <a href="#contacto" class="bg-transparent hover:bg-white/10 border-2 border-white text-white px-8 py-4 rounded-lg font-semibold transition-all duration-300 shadow-lg transform hover:-translate-y-1 backdrop-blur-sm text-center">
                            Solicitar Consulta
                        </a>
                    </div>
                </div>

                <!-- Card flotante a la derecha -->
                <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
                    <div class="bg-white/10 backdrop-blur-md p-8 rounded-xl shadow-2xl border border-white/20 max-w-md transform rotate-1 hover:rotate-0 transition-transform duration-300">
                        <div class="flex items-center mb-6">
                            <div class="h-12 w-12 rounded-full bg-blue-600 flex items-center justify-center mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-white">Servicios profesionales</h3>
                        </div>
                        <p class="text-white/90 mb-6">
                            Accede a soluciones integrales para el desarrollo del talento humano con metodologías innovadoras y personal altamente calificado.
                        </p>
                        <div class="flex flex-wrap gap-3">
                            <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-lg">
                                <span class="text-white font-medium">Desarrollo</span>
                            </div>
                            <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-lg">
                                <span class="text-white font-medium">Formación</span>
                            </div>
                            <div class="bg-blue-600 px-4 py-2 rounded-lg">
                                <span class="text-white font-medium">Consultoría</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Decoración ondulada en la parte inferior -->
        <div class="absolute bottom-0 left-0 right-0 z-10">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="fill-white">
                <path d="M0,96L80,85.3C160,75,320,53,480,53.3C640,53,800,75,960,80C1120,85,1280,75,1360,69.3L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
