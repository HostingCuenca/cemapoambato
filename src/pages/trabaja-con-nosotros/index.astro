---
import Layout from '../../layouts/Layout.astro';
import TrabajoApplicationForm from '../../components/TrabajoApplicationForm.astro';
import { getAllCourses, getAllCategories, getAllDepartments, getActiveJobVacancies } from '../../lib/airtable.js';

// Obtener vacantes activas
const vacancies = await getActiveJobVacancies();

// Obtener departamentos disponibles
const departments = await getAllDepartments();

// Función para formatear fecha
function formatDate(dateString) {
    if (!dateString) return 'Fecha no disponible';
    const date = new Date(dateString);
    return new Intl.DateTimeFormat('es-EC', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
}
---

<Layout
        title="Trabaja con Nosotros | CEMAPO - Especialistas en Talento Humano"
        description="Forma parte de nuestro equipo. Explora las vacantes disponibles y envía tu aplicación para unirte a CEMAPO."
>
    <!-- Hero Section con imagen de fondo -->
    <section class="relative pt-32 pb-24 overflow-hidden">
        <!-- Imagen de fondo con overlay -->
        <div class="absolute inset-0 z-0">
            <img
                    src="https://images.unsplash.com/photo-1521737711867-e3b97375f902?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                    alt="Equipo profesional trabajando juntos"
                    class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-800/80"></div>
        </div>

        <!-- Contenido del Hero -->
        <div class="container mx-auto px-6 relative z-10">
            <div class="max-w-3xl">
                <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4 text-white leading-tight">
                    Trabaja con <span class="text-blue-300">Nosotros</span>
                </h1>
                <p class="text-lg text-white/90 mb-6">
                    Se parte de nuestro equipo de profesionales y transformemos la educación tradicional en la educación del futuro, a través de programas de formación innovadores.
                </p>
            </div>
        </div>
    </section>

    <!-- Por qué trabajar con nosotros -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-blue-900 mb-4">¿Por qué trabajar en CEMAPO?</h2>
                <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                    Somos una empresa comprometida con el desarrollo profesional y personal de nuestro equipo
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
                <!-- Ventaja 1 -->
                <div class="bg-white p-6 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-2 text-center">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-blue-900 mb-3">Desarrollo Profesional</h3>
                    <p class="text-gray-700">
                        Fomentamos el crecimiento continuo de nuestros colaboradores con capacitación constante y oportunidades de desarrollo.
                    </p>
                </div>

                <!-- Ventaja 2 -->
                <div class="bg-white p-6 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-2 text-center">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-blue-900 mb-3">Ambiente Colaborativo</h3>
                    <p class="text-gray-700">
                        Trabajamos en un entorno donde se valoran las ideas, la creatividad y el trabajo en equipo para alcanzar objetivos comunes.
                    </p>
                </div>

                <!-- Ventaja 3 -->
                <div class="bg-white p-6 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-2 text-center">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-blue-900 mb-3">Equilibrio Laboral</h3>
                    <p class="text-gray-700">
                        Promovemos un balance saludable entre vida personal y profesional, con políticas flexibles y enfoque en resultados.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de Vacantes Disponibles -->
    <section class="py-12 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl font-bold text-blue-900 mb-6 text-center">Vacantes Disponibles</h2>

                <!-- Filtro por departamento (si hay más de un departamento) -->
                {departments.length > 1 && (
                        <div class="mb-8 flex flex-wrap justify-center gap-3">
                            <button id="filter-all" class="py-2 px-4 rounded-full bg-blue-600 text-white text-sm font-medium">
                                Todas las áreas
                            </button>
                            {departments.map(department => (
                                    <button
                                            class="filter-btn py-2 px-4 rounded-full bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium"
                                            data-department={department}
                                    >
                                        {department}
                                    </button>
                            ))}
                        </div>
                )}

                <!-- Mensaje si no hay vacantes -->
                {vacancies.length === 0 ? (
                        <div class="text-center py-12 bg-gray-50 rounded-xl">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-gray-400 mb-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 00.75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 00-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0112 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 01-.673-.38m0 0A2.18 2.18 0 013 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 013.413-.387m7.5 0V5.25A2.25 2.25 0 0013.5 3h-3a2.25 2.25 0 00-2.25 2.25v.894m7.5 0a48.667 48.667 0 00-7.5 0M12 12.75h.008v.008H12v-.008z" />
                            </svg>
                            <h3 class="text-xl font-bold text-gray-700 mb-2">No hay vacantes disponibles actualmente</h3>
                            <p class="text-gray-600 mx-auto max-w-lg">
                                En este momento no tenemos posiciones abiertas, pero puedes enviarnos tu CV
                                para considerarlo en futuras oportunidades.
                            </p>

                            <a
                                    href="#aplicacion-general"
                                    class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-lg font-medium transition-all duration-300"
                            >
                                Enviar CV
                            </a>
                        </div>
                ) : (
                    <!-- Lista de vacantes -->
                        <div id="vacancies-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {vacancies.map(vacancy => (
                                    <div class="vacancy-card bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden" data-department={vacancy.department}>
                                        <div class="h-48 overflow-hidden relative">
                                            <img
                                                    src={vacancy.imageUrl}
                                                    alt={vacancy.title}
                                                    class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                                            />
                                            <div class="absolute top-4 right-4 bg-blue-600 text-white text-xs font-semibold py-1 px-2 rounded">
                                                {vacancy.department}
                                            </div>
                                        </div>
                                        <div class="p-6">
                                            <div class="flex justify-between items-start mb-3">
                                                <h3 class="text-xl font-bold text-blue-900">{vacancy.title}</h3>
                                            </div>
                                            <p class="text-gray-600 text-sm mb-3">
                                                Publicado: {formatDate(vacancy.publishDate)}
                                            </p>
                                            <p class="text-gray-700 mb-6 line-clamp-2">
                                                {vacancy.description.slice(0, 120)}...
                                            </p>
                                            <div class="flex gap-3">
                                                <a
                                                        href={`https://wa.me/593982121145?text=Hola, estoy interesado en la vacante de ${encodeURIComponent(vacancy.title)}. ¿Podrían brindarme más información?`}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg font-medium transition-all duration-300 flex items-center justify-center"
                                                >
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                                                    </svg>
                                                    WhatsApp
                                                </a>
                                                <a
                                                        href={`mailto:seleccion@cemapoedu.ec?subject=Aplicación para vacante: ${encodeURIComponent(vacancy.title)}&body=Hola,%0D%0A%0D%0AEstoy interesado en la vacante ${encodeURIComponent(vacancy.title)}.%0D%0A%0D%0APor favor adjuntar CV.`}
                                                        class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-all duration-300 flex items-center justify-center"
                                                >
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                                    </svg>
                                                    Email
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                            ))}
                        </div>
                )}
            </div>
        </div>
    </section>

    <!-- Formulario de Aplicación General -->
    <section id="aplicacion-general" class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto">
                <h2 class="text-3xl font-bold text-blue-900 mb-6 text-center">Envíanos tu CV</h2>
                <p class="text-center text-gray-700 mb-8">
                    Incluso si no hay vacantes abiertas en este momento, siempre estamos buscando talento excepcional.
                    Envíanos tu CV y te consideraremos para futuras oportunidades.
                </p>

                <TrabajoApplicationForm />
            </div>
        </div>
    </section>

    <!-- Llamado a la acción final -->
    <section class="py-16 bg-blue-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-4">¿Listo para dar el siguiente paso en tu carrera?</h2>
            <p class="text-xl text-white/80 mb-8 max-w-3xl mx-auto">
                Envíanos tu CV hoy mismo y forma parte de un equipo apasionado por el desarrollo del talento humano
            </p>
            <a href="#aplicacion-general" class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-700 hover:bg-blue-50 font-semibold rounded-lg transition-all duration-300 shadow-lg transform hover:-translate-y-1">
                Postular ahora
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </section>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Funcionalidad de filtrado por departamento
        const filterButtons = document.querySelectorAll('.filter-btn');
        const filterAll = document.getElementById('filter-all');
        const vacancyCards = document.querySelectorAll('.vacancy-card');

        if (filterButtons.length > 0 && filterAll && vacancyCards.length > 0) {
            // Filtrar por departamento
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const department = this.getAttribute('data-department');

                    // Actualizar clases de botones
                    filterButtons.forEach(btn => btn.classList.remove('bg-blue-600', 'text-white'));
                    filterButtons.forEach(btn => btn.classList.add('bg-gray-100', 'text-gray-800'));
                    filterAll.classList.remove('bg-blue-600', 'text-white');
                    filterAll.classList.add('bg-gray-100', 'text-gray-800');
                    this.classList.remove('bg-gray-100', 'text-gray-800');
                    this.classList.add('bg-blue-600', 'text-white');

                    // Filtrar tarjetas
                    vacancyCards.forEach(card => {
                        const cardDepartment = card.getAttribute('data-department');
                        if (cardDepartment === department) {
                            card.classList.remove('hidden');
                        } else {
                            card.classList.add('hidden');
                        }
                    });
                });
            });

            // Botón "Todas las áreas"
            filterAll.addEventListener('click', function() {
                // Actualizar clases de botones
                filterButtons.forEach(btn => btn.classList.remove('bg-blue-600', 'text-white'));
                filterButtons.forEach(btn => btn.classList.add('bg-gray-100', 'text-gray-800'));
                this.classList.remove('bg-gray-100', 'text-gray-800');
                this.classList.add('bg-blue-600', 'text-white');

                // Mostrar todas las tarjetas
                vacancyCards.forEach(card => card.classList.remove('hidden'));
            });
        }

        // Scroll suave
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 120, // Ajuste para compensar el header fijo
                        behavior: 'smooth'
                    });
                }
            });
        });
    });
</script>