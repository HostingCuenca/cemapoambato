import Layout from '../../layouts/Layout.astro';
import { getCourseById, getAllCourses } from '../../lib/firebase.js';

// Esta función es necesaria para rutas dinámicas en modo estático
export async function getStaticPaths() {
    // Obtener todos los cursos para generar las rutas
  const courses = await getAllCourses();

    // Crear un path para cada curso
  return courses.map(course => ({
    params: { id: course.id },
    props: { course }
    }));
    }

// Los datos del curso vienen como props desde getStaticPaths
const { course } = Astro.props;

// Formato para el WhatsApp
const formatWhatsAppUrl = (number, courseName) => {
    const message = `Hola, estoy interesado en el curso: ${courseName}. ¿Podría proporcionarme más información?`;
    return `https://wa.me/${number || '123456789'}?text=${encodeURIComponent(message)}`;
    };

// Fecha formateada
const formatDate = (timestamp) => {
    if (!timestamp) return null;

    try {
    const date = timestamp.toDate ? timestamp.toDate() : new Date(timestamp);
    return new Intl.DateTimeFormat('es-ES', {
        day: 'numeric',
        month: 'long',
        year: 'numeric'
        }).format(date);
    } catch (e) {
    return "Fecha no disponible";
    }
    };

// Nivel formateado
const formatLevel = (level) => {
    const levels = {
    "beginner": "Principiante",
    "intermediate": "Intermedio",
    "advanced": "Avanzado"
    };

    return levels[level] || level;
    };
