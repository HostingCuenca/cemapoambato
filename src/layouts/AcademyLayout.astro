---
import AcademyNavbar from '../components/layout/AcademyNavbar.astro';
import Footer from '../components/layout/Footer.astro';
import SEOHead from '../components/layout/SEOHead.astro';

export interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
    canonicalURL?: string;
}

const {
    title = 'CEMAPO ACADEMY - Tu futuro universitario comienza aquí',
    description = 'Preparación universitaria personalizada con orientación vocacional, desarrollo de liderazgo y pensamiento crítico.',
    ogImage = '/assets/images/academy-og-image.jpg',
    canonicalURL = Astro.url.pathname
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Usar el CDN de Tailwind -->
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                            950: '#082f49',
                        },
                        secondary: {
                            50: '#fdf2f8',
                            100: '#fce7f3',
                            200: '#fbcfe8',
                            300: '#f9a8d4',
                            400: '#f472b6',
                            500: '#ec4899',
                            600: '#db2777',
                            700: '#be185d',
                            800: '#9d174d',
                            900: '#831843',
                            950: '#500724',
                        },
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        heading: ['Montserrat', 'sans-serif'],
                    },
                }
            }
        }
    </script>

    <meta name="generator" content={Astro.generator} />

    <SEOHead
        title={title}
        description={description}
        ogImage={ogImage}
        canonicalURL={canonicalURL}
    />
</head>
<body class="flex flex-col min-h-screen bg-gray-50">
<!-- Academy Header -->
<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 transition-all duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex items-center">
                <a href="/academy" class="flex items-center space-x-3">
                    <img src="/CEMAPO-LOGO.png" alt="CEMAPO Academy" class="h-12 w-auto">
                    <div class="hidden sm:block">
                        <div class="font-bold text-xl text-gray-900 font-heading">CEMAPO</div>
                        <div class="text-sm text-primary-600 font-medium">ACADEMY</div>
                    </div>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <AcademyNavbar />

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="academy-menu-toggle" class="p-2 rounded-md text-gray-700 hover:bg-gray-100 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="academy-mobile-menu" class="md:hidden hidden mt-4 pb-4">
            <nav class="flex flex-col space-y-0 rounded-lg shadow-md border overflow-hidden">
                <a href="/academy" class="py-3 px-4 border-b hover:text-primary-600 hover:bg-gray-50 transition-colors text-gray-700">
                    Inicio Academy
                </a>
                <a href="/academy#metodologia" class="py-3 px-4 border-b hover:text-primary-600 hover:bg-gray-50 transition-colors text-gray-700">
                    Nuestra Metodología
                </a>
                <a href="/academy#beneficios" class="py-3 px-4 border-b hover:text-primary-600 hover:bg-gray-50 transition-colors text-gray-700">
                    Beneficios
                </a>
                <a href="/academy#contacto" class="py-3 px-4 border-b hover:text-primary-600 hover:bg-gray-50 transition-colors text-gray-700">
                    Contacto
                </a>
            </nav>
            <a href="/login" target="_blank" class="bg-primary-600 hover:bg-primary-700 text-white py-3 px-4 rounded-md text-center mt-4 block shadow-md font-medium transition-colors">Aula Virtual</a>
        </div>
    </div>
</header>

<main class="flex-grow pt-20">
    <slot />
</main>

<Footer />

<script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
        // Mobile menu toggle for Academy
        const menuButton = document.getElementById('academy-menu-toggle');
        const mobileMenu = document.getElementById('academy-mobile-menu');

        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header scroll effect
        const header = document.querySelector('header');
        if (header) {
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        }
    });
</script>

<style is:global>
    html {
        scroll-behavior: smooth;
    }

    body {
        overflow-x: hidden;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Montserrat', sans-serif;
    }

    header.scrolled {
        backdrop-filter: blur(12px);
        background-color: rgba(255, 255, 255, 0.98);
        box-shadow: 0 1px 20px rgba(0, 0, 0, 0.1);
    }

    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #0284c7;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #0369a1;
    }
</style>
</html>